[Unit]
Description=Payment Service

[Service]
User=root
WorkingDirectory=/app
Environment=CART_HOST=cart-dev.cskvsmi.online
Environment=CART_PORT=8080
Environment=USER_HOST=user-dev.cskvsmi.online
Environment=USER_PORT=8080
Environment=AMQP_HOST=rabbitmq-dev.cskvsmi.online
Environment=AMQP_USER=${app_user}
Environment=AMQP_PASS=${app_user}123

ExecStart=/usr/local/bin/uwsgi --ini payment.ini
ExecStop=/bin/kill -9 $MAINPID
SyslogIdentifier=payment

[Install]
WantedBy=multi-user.target